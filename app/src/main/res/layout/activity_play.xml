<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Play">
    <Button
        android:id="@+id/btnNewPattern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:onClick="newPattern"
        android:text="new pattern"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStartAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="60dp"
        android:onClick="startAction"
        android:text="start action"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnTryYpurself"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="try_yourself"
        android:text="try yourself"
        app:layout_constraintBottom_toBottomOf="@+id/btnStartAction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.305"
        app:layout_constraintStart_toEndOf="@+id/btnStartAction"
        app:layout_constraintTop_toTopOf="@+id/btnStartAction"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="188dp"
        android:text="Status:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="270dp"
        android:layout_height="248dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/btnStartAction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.371"
        app:layout_constraintStart_toStartOf="@+id/btnNewPattern"
        app:layout_constraintTop_toBottomOf="@+id/btnNewPattern"
        app:srcCompat="@drawable/base" />

    <ImageView
        android:id="@+id/imgFinO1"
        android:layout_width="270dp"
        android:layout_height="248dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@drawable/o1" />

    <ImageView
        android:id="@+id/imgFinO2"
        android:layout_width="270dp"
        android:layout_height="248dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@drawable/o2" />

    <ImageView
        android:id="@+id/imgFinO3"
        android:layout_width="270dp"
        android:layout_height="248dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@drawable/o3" />

    <ImageView
        android:id="@+id/imgFinO4"
        android:layout_width="270dp"
        android:layout_height="248dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@drawable/o4" />

    <ImageView
        android:id="@+id/imgFinC1"
        android:layout_width="270dp"
        android:layout_height="248dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@drawable/c1" />

    <ImageView
        android:id="@+id/imgFinC2"
        android:layout_width="270dp"
        android:layout_height="248dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@drawable/c2" />

    <ImageView
        android:id="@+id/imgFinC3"
        android:layout_width="270dp"
        android:layout_height="248dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@drawable/c3" />

    <ImageView
        android:id="@+id/imgFinC4"
        android:layout_width="270dp"
        android:layout_height="248dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@drawable/c4" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="319dp"
        android:layout_height="73dp"
        android:text="waiting for user to start"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.13" />

    <Button
        android:id="@+id/btnData"
        android:layout_width="62dp"
        android:layout_height="34dp"
        android:layout_marginTop="12dp"
        android:onClick="data"
        android:text="log"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/btnTryYpurself"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnTryYpurself"
        app:layout_constraintTop_toBottomOf="@+id/btnTryYpurself" />

</androidx.constraintlayout.widget.ConstraintLayout>